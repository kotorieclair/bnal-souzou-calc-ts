{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "typeRoots": [
      "typings",
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}